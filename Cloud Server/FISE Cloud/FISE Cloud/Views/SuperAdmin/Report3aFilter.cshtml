<div class="row reportfilter-row">
    <div class="col-xs-12"><p class="report_subtitle">Select Duration:</p></div>
    <div class="col-xs-12 reportfilter_radio">
        <div class="col-xs-2">
            <input type="radio" id="select-duration" name="select-duration" value="a-month" />
            <label class="report-radio-label">A Month</label>
        </div>
        <div class="col-xs-2">
            @{
                List<SelectListItem> listYears = new List<SelectListItem>();
                listYears.Add(new SelectListItem { Text = "Female", Value = "Female" });
                listYears.Add(new SelectListItem { Text = "Male", Value = "Male" });
            }
            @Html.DropDownList("a-month-year", listYears, "Select Year")
        </div>
        <div class="col-xs-offset-1 col-xs-2">
            @{
                List<SelectListItem> listMonths = new List<SelectListItem>();
                listMonths.Add(new SelectListItem { Text = "Female", Value = "Female" });
                listMonths.Add(new SelectListItem { Text = "Male", Value = "Male" });
            }
            @Html.DropDownList("a-month-month", listMonths, "Select Month")
