
@using FISE_Cloud.Models;
@using Webdiyer.WebControls.Mvc;
@model PagedList<UserRegistrationModel>

@{
    var l1 = ((Model.CurrentPageIndex - 1) * Model.PageSize) + 1;
    var l2 = (Model.CurrentPageIndex * Model.PageSize);
    if (l2 > @Model.TotalItemCount)
    {
        l2 = @Model.TotalItemCount;
    }
    var final = l1 + " - " + l2;
    if (l1 == l2)
    {
        final = l1.ToString();
    }
    if (@Model.TotalItemCount == 0)
    {
        final = (0).ToString();
    }
}

<div class="row pager-item">
    <div class="col-xs-8">
        <select class="pagesize_Dropdown" id="ElibAdminPageSize">
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="50">50</option>
        </select> 
        <span class="">Entries Per Page | Showing @final of (@Model.TotalItemCount) e-library admin(s)</span>
    </div>


    <div class="col-xs-4">

        @Ajax.Pager(Model, new PagerOptions { PageIndexParameterName = "pageno", PageSizeBoxId = "ElibAdminPageSize", PageSizeParameterName = "pagesize", ShowFirstLast = false, AlwaysShowFirstLastPageNumber = true, NumericPagerItemCount = 3, PrevPageText = "Previous", CurrentPagerItemTemplate = "<span class=\"current\">{0}</span>", DisabledPagerItemTemplate = "<span class=\"disabled\">{0}</span>", HtmlAttributes = new Dictionary<string, object> { { "class", "ajaxpager" } }, PagerItemTemplate = "&nbsp;{0}" }, new MvcAjaxOptions { UpdateTargetId = "ElibraryAdminsContainer", HttpMethod = "POST", DataFormId = "searchForm" })

    </div>
</div>  

@foreach (UserRegistrationModel elibraryadmin in Model)
{
    <a class="a_link_list-item" href="@Url.RouteUrl("ElibraryAdminInfo", new { elibadminid=elibraryadmin.UserId})">
        <div class="row list-item">
            <div class="col-xs-12 list-item-name">@elibraryadmin.FirstName @elibraryadmin.LastName</div>
            <div class="col-xs-12">
                <span class="list-item-subcontent"><span class="list_content_subdiv_bold">@Resource.Elibadmin_Elibadminlist_Email</span><span>@elibraryadmin.Email</span></span>
                <span class="list-item-subcontent"><span class="list_content_subdiv_bold">@Resource.Elibadmin_Elibadminlist_Mobile</span><span>@elibraryadmin.MobileNumber </span></span>

                <span class="float-right list_content_subdiv_bold">
                    @if (!(@elibraryadmin.Status) && @elibraryadmin.IsTrashed)
                    {
                        @Html.Raw(Resource.Status_Disabled);
                    }

                    @if (@elibraryadmin.Status && !(@elibraryadmin.IsTrashed) && (@elibraryadmin.LastLoginDate) != null)
                    {
                        @Html.Raw(Resource.Status_Active);
                    }
                    else if (@elibraryadmin.Status && !(@elibraryadmin.IsTrashed) && (@elibraryadmin.LastLoginDate) == null)
                    {
                        @Html.Raw(Resource.Status_Registered);
                    }

                    @if (!@elibraryadmin.Status && !@elibraryadmin.IsTrashed && (@elibraryadmin.LastLoginDate) == null)
                    {
                        @Html.Raw(Resource.Status_Created);
                    }
                </span>

            </div>


        </div>
    </a>
}
@if (Model.Count.Equals(0))
{ <div>@Resource.NoResultsFound</div>}
<div class="row pager-item">
    @Ajax.Pager(Model, new PagerOptions { PageIndexParameterName = "pageno", PageSizeBoxId = "ElibAdminPageSize", PageSizeParameterName = "pagesize", ShowFirstLast = false, AlwaysShowFirstLastPageNumber = true, NumericPagerItemCount = 3, PrevPageText = "Previous", CurrentPagerItemTemplate = "<span class=\"current\">{0}</span>", DisabledPagerItemTemplate = "<span class=\"disabled\">{0}</span>", HtmlAttributes = new Dictionary<string, object> { { "class", "ajaxpager" } }, PagerItemTemplate = "&nbsp;{0}" }, new MvcAjaxOptions { UpdateTargetId = "ElibraryAdminsContainer", HttpMethod = "Post", DataFormId = "searchForm" })
</div>
